<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme.NoTitleBar">
        <item name="android:windowActionBar" tools:targetApi="11">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="AppTheme.Guide" parent="@style/AppTheme.NoTitleBar">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppTheme" parent="@style/AppThemeBase">
    </style>


    <style name="AppThemeBase" parent="@style/Theme.AppCompat.Light">

        <item name="android:windowActivityTransitions" tools:targetApi="lollipop">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="elevation">4dp</item>

        <item name="android:windowBackground">@color/content_bg_color</item>
        <item name="android:windowIsTranslucent">false</item>

        <item name="actionBarStyle">@style/Widget.ActionBar</item>
        <item name="android:actionBarStyle" tools:targetApi="11">@style/Widget.ActionBar</item>

        <item name="actionBarSize">@dimen/actionBarSize</item>
        <item name="android:actionBarSize" tools:targetApi="11">@dimen/actionBarSize</item>

        <!-- Set homeAsUpIndicator to transparent with a width -->
        <item name="homeAsUpIndicator">@drawable/back_btn</item>
        <item name="android:homeAsUpIndicator" tools:targetApi="11">
            @drawable/back_btn
        </item>

        <!-- Don't do background highlight when click actionbar items-->
        <item name="actionBarItemBackground">@android:color/transparent</item>
        <item name="android:actionBarItemBackground" tools:targetApi="14">
            @android:color/transparent
        </item>

        <item name="actionBarDivider">@drawable/common_title_btn_splitter</item>
        <item name="android:actionBarDivider" tools:targetApi="14">
            @drawable/common_title_btn_splitter
        </item>

        <!-- Remove shadow below action bar Android < 5.0 -->
        <item name="android:windowContentOverlay">@null</item>

        <!-- Color of action buttons -->
        <item name="actionMenuTextColor">@color/action_bar_item_color</item>
        <item name="android:actionMenuTextColor" tools:targetApi="11">@color/action_bar_item_color
        </item>
        <item name="actionMenuTextAppearance">@style/Widget.ActionBar.MenuTextStyle</item>
        <item name="android:actionMenuTextAppearance" tools:targetApi="11">
            @style/Widget.ActionBar.MenuTextStyle
        </item>
        <item name="overflowIcon">@drawable/common_btn_more_normal</item>
    </style>


    <style name="Widget.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="height">@dimen/actionBarSize</item>
        <item name="android:height">@dimen/actionBarSize</item>
        <item name="displayOptions">showCustom|homeAsUp|showHome</item>
        <item name="android:displayOptions" tools:targetApi="11">showCustom|homeAsUp|showHome</item>
        <item name="background">@drawable/actionbar_bg</item>
        <item name="android:background" tools:targetApi="11">@drawable/actionbar_bg</item>
        <item name="backgroundSplit">@color/actionbar_bg</item>
        <item name="android:backgroundSplit" tools:targetApi="14">@color/actionbar_bg</item>
        <!--<item name="icon">@android:color/transparent</item>-->
        <item name="android:icon" tools:targetApi="11">@android:color/transparent</item>
        <item name="titleTextStyle">@style/Widget.ActionBar.TitleTextStyle</item>
        <item name="android:titleTextStyle" tools:targetApi="11">
            @style/Widget.ActionBar.TitleTextStyle
        </item>
        <item name="android:textAllCaps" tools:targetApi="14">false</item>
        <item name="textAllCaps">false</item>
        <!-- remove shadow below action bar Android > 5.0 -->
        <item name="android:elevation" tools:targetApi="21">0dp</item>
        <item name="elevation">0dp</item>
    </style>
    <!-- ActionBar title text -->
    <style name="Widget.ActionBar.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/c444</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:textSize">15sp</item>
    </style>
    <!-- ActionBar button text -->
    <style name="Widget.ActionBar.MenuTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textColor">@color/action_bar_item_color</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps" tools:targetApi="14">false</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>